<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <!-- Define the complex type for an address -->
    <xs:complexType name="AddressType">
        <xs:sequence>
            <xs:element name="name_1" type="xs:string"/>
            <xs:element name="name_2" type="xs:string" minOccurs="0"/>
            <xs:element name="street" type="xs:string"/>
            <xs:element name="zip">
                <xs:simpleType>
                    <xs:restriction base="xs:integer">
                        <xs:pattern value="[0-9]{4}"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="city" type="xs:string"/>
            <xs:element name="phone" type="xs:string" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <!-- Define the client type -->
    <xs:element name="client">
        <xs:complexType>
            <xs:sequence>
                <!-- Add the client_type element with a type attribute -->
                <xs:element name="client_type">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:enumeration value="owner"/>
                            <xs:enumeration value="administration"/>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>
                <!-- Include the AddressType complex type for address information -->
                <xs:element name="adress" type="AddressType"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- Define the contractor type -->
    <xs:element name="contractor">
        <xs:complexType>
            <xs:sequence>
                <!-- Add the contractor_type element with a type attribute -->
                <xs:element name="contractor_type">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:enumeration value="electrician"/>
                            <xs:enumeration value="inspector"/>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>
                <!-- Include the AddressType complex type for address information -->
                <xs:element name="adress" type="AddressType"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>


